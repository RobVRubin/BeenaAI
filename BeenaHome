    document.addEventListener('DOMContentLoaded', function () {
        
        // AI Compute Chart
        const aiComputeCtx = document.getElementById('aiComputeChart');
        if (aiComputeCtx) {
            const aiComputeChart = new Chart(aiComputeCtx.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: ['2012 (AlexNet)', '2018 (AlphaGo Zero)', '2023 (GPT-4)'],
                    datasets: [{
                        label: 'Training FLOPS (Floating-Point Operations Per Second)',
                        data: [1e15, 1e22, 1e25], // Using logarithmic scale for visualization
                        backgroundColor: 'rgba(14, 165, 233, 0.6)',
                        borderColor: 'rgba(14, 165, 233, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            type: 'logarithmic',
                            ticks: {
                               callback: function(value, index, values) {
                                    return value.toExponential() + ' FLOPS'
                               }
                            }
                        }
                    }
                }
            });
        }

